<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ru.vodnouho.android.atthisdaywidgetapp"
    android:versionCode="7"
    android:versionName="0.5.6" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="23" />

    <uses-permission android:name="ru.vodnouho.android.yourday.cp.READ" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:icon="@drawable/ic_widget"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="ru.vodnouho.android.atthisdaywidgetapp.SettingsActivity"
            android:icon="@drawable/ic_widget"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_CONFIGURE" />
            </intent-filter>
        </activity>

        <receiver
            android:name="ru.vodnouho.android.atthisdaywidgetapp.OTDWidgetProvider"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
                <action android:name="ru.vodnouho.android.atthisdaywidgetapp.ACTION_IMAGE_LOADED" />
                <action android:name="ru.vodnouho.android.atthisdaywidgetapp.ACTION_NO_DATA" />
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/atd_widget_info" />
        </receiver>
        <receiver android:name="ru.vodnouho.android.atthisdaywidgetapp.ATDAppWidgetService$CategoryListRemoteViewsFactory" >
            <intent-filter>
                <action android:name="android.net.conn.CONNECTIVITY_CHANGE" />
            </intent-filter>
        </receiver>

        <service
            android:name="ru.vodnouho.android.atthisdaywidgetapp.ATDAppWidgetService"
            android:permission="android.permission.BIND_REMOTEVIEWS" />
    </application>

</manifest>